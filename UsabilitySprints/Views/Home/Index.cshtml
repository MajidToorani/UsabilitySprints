    <div align="left">
        <br/><br/>
        <fieldset>
            <legend style="color:blue">Style Conversion: </legend>
            <div>
                <h2>Green Render</h2>
                <label style="font-size:25px">Type your text here:</label>
                <textarea id="US1originalText" rows="3" cols="40"></textarea>
                <label style="font-size:25px" >Result:</label>
                <textarea id="greenBackground" disabled rows="3" cols="40"></textarea><br /><br />
                <input type="submit" value="Green Render" onclick="BackColor('lightgreen');" />
            </div><br />
            <div>
                <h2>Reverse</h2>
                <label style="font-size:25px">Type your text here:</label>
                <textarea id="US5originalText" rows="3" cols="40"></textarea>
                <label style="font-size:25px" >Result:</label>
                <textarea id="reversedText" disabled rows="3" cols="40"></textarea><br /><br />
                <input type="submit" value="Reverse" onclick="ReverseMyText();" />
            </div><br />
            <div>
                <h2>Bold Render</h2>
                <label style="font-size:25px">Type your text here:</label>
                <textarea id="US3originalText" rows="3" cols="40"></textarea>
                <label style="font-size:25px">Result:</label>
                <span id="boldText"></span><br />
                <input type="submit" value="Bold" onclick="Bold();" />
            </div><br />
            <div>
                <h2>Italicize</h2>
                <label style="font-size:25px">Type your text here:</label>
                <textarea id="US4originalText" rows="3" cols="40"></textarea>
                <label style="font-size:25px">Result:</label>
                <span id="italicizedText"></span><br />
                <input type="submit" value="Italicize" onclick="Italicize();" />
            </div><br />
        </fieldset>
